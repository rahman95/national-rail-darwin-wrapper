{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "lib": ["es2017"],
        "moduleResolution": "node",
        "module": "commonJS",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "target": "es6",
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "types": ["jest", "node"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "tests"]
}