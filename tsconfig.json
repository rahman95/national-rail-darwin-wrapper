{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2017"],
        "moduleResolution": "node",
        "module": "commonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "target": "es5",
        "typeRoots": ["src/@types", "node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "tests"]
}