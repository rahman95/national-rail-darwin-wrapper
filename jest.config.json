{
    "automock": false,
    "clearMocks": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,ts}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "setupFiles": ["dotenv/config"],
    "resetModules": false,
    "rootDir": "./",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.(spec|test).ts?(x)",
      "<rootDir>/**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": false
  }